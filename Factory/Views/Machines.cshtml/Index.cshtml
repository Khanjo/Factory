@{
    Layout = "_Layout";
}

@using Factory.Models

<h1>Machines:</h1>

@if (@Model.Count == 0)
{
    <h3>No machines have been added yet.</h3>
}

<ul>
    @foreach (Machine machine in Model)
    {
        <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
        @if (@Model.JoinEntities.Count == 0)
        {
            <p>This machine hasn't been assigned to any engineers.</p>
        }
        else
        {
            <ul>
                @foreach (MachineEngineer join in Model.JoinEntities)
                {
                    <li>@join.Engineer.Name</li>
                }
            </ul>
        }
    }
</ul>

<div class="links">
    <h2>@Html.ActionLink("Home", "Index", "Home")</h2>
</div>