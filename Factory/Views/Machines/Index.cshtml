@{
    Layout = "_Layout";
}

@using Factory.Models

<h1>Machines:</h1>

<div id="stuff">
    @if (@Model.Count == 0)
    {
        <p>No machines have been added yet.</p>
    }

    <ul>
        @foreach (Machine machine in Model)
        {
            <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
        }
    </ul>
</div>
<br>
<br>
<div class="links">
    <h2>@Html.ActionLink("Add New Machine", "Create")</h2>
    <h2>@Html.ActionLink("Home", "Index", "Home")</h2>
</div>