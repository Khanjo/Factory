@{
    Layout = "_Layout";
}

@using Factory.Models

<h1>Engineers:</h1>

<div id="stuff">
    @if (@Model.Count == 0)
    {
        <p>No engineers have been added yet.</p>
    }

    <ul>
        @foreach (Engineer engineer in Model)
        {
            <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
        }
    </ul>
</div>
<br>
<br>
<div class="links">
    <h2>@Html.ActionLink("Add New Engineer", "Create")</h2>
    <h2>@Html.ActionLink("Home", "Index", "Home")</h2>
</div>